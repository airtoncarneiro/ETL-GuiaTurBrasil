{
    "name": "AWS-ETL-GuiaTurBrasil",
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile"
    },
    "mounts": [
        "source=${env:HOME}${env:USERPROFILE}/.aws,target=/home/${localEnv:USER}/.aws,type=bind",
        "source=${env:HOME}${env:USERPROFILE}/.git,target=/home/${localEnv:USER}/.git,type=bind",
        "source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/${localEnv:USER}/.ssh,type=bind",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "amazonwebservices.amazon-q-vscode",
                "amazonwebservices.aws-toolkit-vscode",
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.analysis.extraPaths": [
                    "${workspaceFolder}/layers/my_libs"
                ]
            }
        }
    },
    "containerEnv": {
        "SHELL": "/bin/bash"
    }
}